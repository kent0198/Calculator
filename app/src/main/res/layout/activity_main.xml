<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="@drawable/textfield"
        android:paddingTop="40dp"
        android:paddingRight="10dp"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="40sp">

    </TextView>

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_below="@+id/buttonDivide"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"


        android:layout_toRightOf="@+id/button9"
        android:background="@drawable/buttondesign"
        android:text="*"
        android:textColor="#FF03DAC5"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/button9"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/buttonPercent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"

        android:layout_toRightOf="@+id/button8"
        android:background="@drawable/buttondesign"
        android:text="9"
        android:textColor="#ffffff"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/textview"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/buttonBackSpace"
        android:background="@drawable/buttondesign"
        android:text="%"
        android:textColor="#FF03DAC5"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_below="@+id/textview"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/buttonPercent"
        android:background="@drawable/buttondesign"
        android:text="/"
        android:textColor="#FF03DAC5"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/textview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttondesign"
        android:text="AC"
        android:textColor="@color/colorAccent"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/buttonBackSpace"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/textview"

        android:layout_marginLeft="0dp"

        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/buttonClear"
        android:background="@drawable/buttondesign"


        android:drawableStart="@drawable/ic_baseline_backspace_24"
        android:drawableTint="#FF03DAC5"
        android:gravity="center_horizontal|top"
        android:paddingLeft="35dp"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button7"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/buttonClear"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/buttondesign"
        android:text="7"
        android:textColor="#ffffff"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/button8"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/buttonBackSpace"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"

        android:layout_toRightOf="@+id/button7"
        android:background="@drawable/buttondesign"
        android:text="8"
        android:textColor="#ffffff"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/button4"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/buttondesign"
        android:text="4"
        android:textColor="#ffffff"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/button5"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/button8"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/button4"
        android:background="@drawable/buttondesign"
        android:text="5"
        android:textColor="#ffffff"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/button6"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/button9"

        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/button8"
        android:background="@drawable/buttondesign"
        android:text="6"
        android:textColor="#ffffff"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_below="@+id/buttonMultiply"
        android:layout_marginLeft="2dp"

        android:layout_marginTop="0dp"

        android:layout_toRightOf="@+id/button6"
        android:background="@drawable/buttondesign"
        android:text="-"
        android:textColor="#FF03DAC5"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/button1"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/buttondesign"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/button2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/button5"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/button1"
        android:background="@drawable/buttondesign"
        android:text="2"
        android:textColor="#ffffff"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/button3"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/button6"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/button2"
        android:background="@drawable/buttondesign"
        android:text="3"
        android:textColor="#ffffff"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_below="@+id/buttonSubtract"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/button3"
        android:background="@drawable/buttondesign"
        android:text="+"
        android:textColor="#FF03DAC5"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/button0"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/buttondesign"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@+id/button2"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/button0"
        android:background="@drawable/buttondesign"
        android:text="."
        android:textColor="#ffffff"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="186dp"
        android:layout_height="88dp"
        android:layout_below="@+id/button3"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/buttonDot"
        android:background="@drawable/buttondesign"
        android:text="="
        android:textColor="#FFEB3B"
        android:textSize="40sp"></Button>

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-33dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/textfield"
        android:paddingTop="50dp"
        android:paddingRight="10dp"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="40sp">

    </TextView>

</RelativeLayout>